<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="userDataProvider" class="com.example.ioc.UserDatabaseProvider"/>
    <bean id="webDataProvider" class="com.example.ioc.WebServiceProvider"/>

    <bean id="userManagerWithUserDataProvider" class="com.example.ioc.UserManager">
        <constructor-arg ref="userDataProvider"/>
    </bean>

    <bean id="userManagerWithWebDataProvider" class="com.example.ioc.UserManager">
        <constructor-arg ref="webDataProvider"/>
    </bean>

</beans>